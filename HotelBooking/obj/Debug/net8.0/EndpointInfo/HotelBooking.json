{
  "openapi": "3.0.1",
  "info": {
    "title": "HotelBooking",
    "version": "1.0"
  },
  "paths": {
    "/api/Bookings": {
      "post": {
        "tags": [
          "Bookings"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/BookRoomRequest"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/BookRoomRequest"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/BookRoomRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/BookingDto"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BookingDto"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/BookingDto"
                }
              }
            }
          }
        }
      }
    },
    "/api/Bookings/{bookingReference}": {
      "get": {
        "tags": [
          "Bookings"
        ],
        "parameters": [
          {
            "name": "bookingReference",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/Booking"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Booking"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/Booking"
                }
              }
            }
          }
        }
      }
    },
    "/api/Data/seed": {
      "post": {
        "tags": [
          "Data"
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/Data/reset": {
      "post": {
        "tags": [
          "Data"
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/Hotels/{name}": {
      "get": {
        "tags": [
          "Hotels"
        ],
        "parameters": [
          {
            "name": "name",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/Hotel"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Hotel"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/Hotel"
                }
              }
            }
          }
        }
      }
    },
    "/api/Hotels/available-rooms": {
      "get": {
        "tags": [
          "Hotels"
        ],
        "parameters": [
          {
            "name": "checkIn",
            "in": "query",
            "schema": {
              "type": "string",
              "format": "date-time"
            }
          },
          {
            "name": "checkOut",
            "in": "query",
            "schema": {
              "type": "string",
              "format": "date-time"
            }
          },
          {
            "name": "numberOfGuests",
            "in": "query",
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/AvailableRoomDto"
                  }
                }
              },
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/AvailableRoomDto"
                  }
                }
              },
              "text/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/AvailableRoomDto"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "AvailableRoomDto": {
        "type": "object",
        "properties": {
          "hotelName": {
            "type": "string",
            "nullable": true
          },
          "roomNumber": {
            "type": "string",
            "nullable": true
          },
          "roomType": {
            "$ref": "#/components/schemas/RoomType"
          },
          "capacity": {
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      },
      "BookRoomRequest": {
        "type": "object",
        "properties": {
          "hotelName": {
            "type": "string",
            "nullable": true
          },
          "roomNumber": {
            "type": "string",
            "nullable": true
          },
          "checkInDate": {
            "type": "string",
            "format": "date-time"
          },
          "checkOutDate": {
            "type": "string",
            "format": "date-time"
          },
          "numberOfGuests": {
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      },
      "Booking": {
        "required": [
          "bookingReference",
          "checkInDate",
          "checkOutDate"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "bookingReference": {
            "maxLength": 20,
            "minLength": 0,
            "type": "string"
          },
          "checkInDate": {
            "type": "string",
            "format": "date-time"
          },
          "checkOutDate": {
            "type": "string",
            "format": "date-time"
          },
          "numberOfGuests": {
            "maximum": 4,
            "minimum": 1,
            "type": "integer",
            "format": "int32"
          },
          "roomId": {
            "type": "integer",
            "format": "int32"
          },
          "room": {
            "$ref": "#/components/schemas/Room"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          }
        },
        "additionalProperties": false
      },
      "BookingDto": {
        "type": "object",
        "properties": {
          "bookingReference": {
            "type": "string",
            "nullable": true
          },
          "hotelName": {
            "type": "string",
            "nullable": true
          },
          "roomNumber": {
            "type": "string",
            "nullable": true
          },
          "checkInDate": {
            "type": "string",
            "format": "date-time"
          },
          "checkOutDate": {
            "type": "string",
            "format": "date-time"
          },
          "numberOfGuests": {
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      },
      "Hotel": {
        "required": [
          "name"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "name": {
            "maxLength": 100,
            "minLength": 0,
            "type": "string"
          },
          "rooms": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Room"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "Room": {
        "required": [
          "roomNumber"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "roomNumber": {
            "minLength": 1,
            "type": "string"
          },
          "roomType": {
            "$ref": "#/components/schemas/RoomType"
          },
          "capacity": {
            "type": "integer",
            "format": "int32",
            "readOnly": true
          },
          "hotelId": {
            "type": "integer",
            "format": "int32"
          },
          "hotel": {
            "$ref": "#/components/schemas/Hotel"
          },
          "bookings": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Booking"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "RoomType": {
        "enum": [
          1,
          2,
          4
        ],
        "type": "integer",
        "format": "int32"
      }
    }
  }
}